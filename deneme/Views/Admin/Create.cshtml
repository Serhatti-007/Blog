@model TblPost
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create A Post</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Body">Body</label>
            <input asp-for="Body" class="form-control" style="height:200px">
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
             <div class="mb-3">
            <label asp-for="PostResim">Image</label>
            <input asp-for="PostResim" class="form-control" style="height:200px">
            <span asp-validation-for="PostResim" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Admin" asp-action="Listele" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>
</form>
