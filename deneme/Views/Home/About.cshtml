@model IEnumerable<About>
@{
    ViewData["Title"] = "About";
}

@*<h1>@ViewData["Title"]</h1>

<p>Merhaba hakkında kısmı. </p>
*@

@{
    Html.RenderPartial("_Navigasyon");
}

<style>
    img{
        width: 100%; 
        height: auto;
    }
    .container{
        margin-bottom: 1.7rem;
    }
</style>

@foreach (var obj in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>@obj.Title</h2>
                <p>@Html.Raw(obj.Body)</p>
            </div>
            <div class="col-md-6">
                <img src="@obj.Image" />
            </div>
        </div>
    </div>
}

